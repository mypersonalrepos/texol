      <div class="form_wrapper">
        <div class="form_container">
          <div class="title_container">
            <h2>adding products</h2>
          </div>
          <div class="row clearfix">
            <div class="">
              <form method="post" action="/products/updating/<%=items._id%>" enctype="multipart/form-data">
                <div class="input_field"> 
                  <input type="text" name="title" placeholder="title product" value="<%=items.title%>" required />
                </div>
                <br>
                <div class="input_field"> 
                  <input type="text" name="uniqueids" placeholder="uniqueids" value="<%=items.uniqueids%>" required />
                </div>
                <br>
                  <div class="input_field"> 
                    <input type="file" name="image"  accept="image/*" required>
                    <img src="/images/<%=items.image%>" alt="" width="100" class="img-thumbnail mt-1">
                    <input type="hidden" name="old_image" value="/images/<%=items.image%>">
                  </div>
                  
                </div>
                    <div class="input_field select_option">
                      
                    </div>  
                <input class="button" type="submit" value="updateproducts" />
              </form>
            </div>
          </div>
        </div>
